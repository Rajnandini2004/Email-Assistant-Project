{
  "name": "Email Writer Assistant",
  "description": "AI Email Reply Generator",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:8080/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://mail.google.com/*"
      ],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "Email Writer Assistant"
  }
}
